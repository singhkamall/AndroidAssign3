<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.owner.fatih_kamal_mapd711_onlinepurchase.ProductActivity"
    android:orientation="vertical">

    <TextView android:id="@+id/username"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Products" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:background="@color/colorPrimary">

            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />

            <TextView
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:layout_marginRight="100px"
                android:text="Price"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />

            <TextView
                android:layout_width="105px"
                android:layout_height="wrap_content"
                android:layout_marginRight="130px"
                android:text="Qty"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />

            <TextView
                android:layout_width="105px"
                android:layout_height="wrap_content"
                android:layout_marginRight="100px"
                android:text="Add"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/lProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnOrderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btn"
        android:onClick="btnOrderView_click"
        android:text="View Cart" />

</LinearLayout>